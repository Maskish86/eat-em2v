# DATA_ROOT=/path/to/persistent/storage 

# Feature prefix (prefix only; expects .npy/.lengths/.emo)
FEAT_PREFIX=${DATA_ROOT}/eat-em2v/feats/iemocap/eat_original/train

# Backbone label (used for grouping output dir)
BACKBONE_TYPE=eat_original

# Inputs for extraction (if features are missing)
IEMOCAP_ROOT=${DATA_ROOT}/datasets/IEMOCAP_full_release
CHECKPOINT=${DATA_ROOT}/eat-em2v/checkpoints/pretrained/EAT-base_epoch30_pt.pt

# Output directory root for evaluation checkpoints/metrics
OUTPUT_DIR=${DATA_ROOT}/eat-em2v/outputs/iemocap_eval

# Optimization / eval params
BATCH_SIZE=128
EPOCHS=100
LR=5e-4
MAX_LR=1e-3
STEP_SIZE_UP=10
WEIGHT_DECAY=1e-5
SEED=42

# W&B logging
WANDB_PROJECT=emotion2vec-eat
WANDB_GROUP=iemocap-eat_original
WANDB_NAME=iemocap-eat_original-seed42
